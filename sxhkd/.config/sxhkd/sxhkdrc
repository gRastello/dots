# Reload sxhkd
super + shift + r
  pkill -USR1 -x sxhkd
  $HOME/.config/openbox/autostart

# Brightness control.
@XF86MonBrightnessUp
  light -A 5

@XF86MonBrightnessDown
  light -U 5

# Volume control.
@XF86AudioRaiseVolume
  pactl set-sink-volume @DEFAULT_SINK@ +10%

@XF86AudioLowerVolume
  pactl set-sink-volume @DEFAULT_SINK@ -10%

@XF86AudioMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle

# Vi-mode
super + v
  ~/scripts/vimmap

super + shift + v
  ~/scripts/stdmap

# A program launcher.
super + d
  ~/scripts/launcher

# A web launcher.
super + w
  ~/scripts/weblauncher

# Bookmarks dmenu script.
super + b
  ~/scripts/bookmarks

# Screencasting and screenshotting (needed sometimes).
super + p
  ffmpeg -y -f x11grab -s 1366x768 -i :0.0 ~/screencast.mkv

super + shift + p
  killall ffmpeg

Print
  notify-send -u normal "Screenshot" "Cheese!" && import -window root ~/documents/pictures/screenshots/last-screenshot.png

super + Print
  notify-send -u normal "Screenshot" "Opening the GIMP..." && import -window root ~/documents/pictures/screenshots/last-screenshot.png && gimp ~/documents/pictures/screenshots/last-screenshot.png

# Shutdown script.
super + shift + s
  ~/scripts/shutdown
