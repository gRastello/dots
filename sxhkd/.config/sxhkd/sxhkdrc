# Brightness control.
@XF86MonBrightnessUp
  light -A 5

@XF86MonBrightnessDown
  light -U 5

# Volume control.
@XF86AudioRaiseVolume
  pactl set-sink-volume @DEFAULT_SINK@ +10%

@XF86AudioLowerVolume
  pactl set-sink-volume @DEFAULT_SINK@ -10%

@XF86AudioMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle

# A program launcher.
super + d
  ~/scripts/launcher

# A web launcher.
super + w
  ~/scripts/weblauncher

# Bookmarks dmenu script.
super + b
  ~/scripts/bookmarks

# Screencasting and screenshotting (needed sometimes).
super + p
  ffmpeg -y -f x11grab -s 1366x768 -i :0.0 ~/screencast.mkv & \
  notify-send -u normal "Screencasting" "Started new screencast!"

super + shift + p
  killall ffmpeg && \
  notify-send -u normal "Screencasting" "Stopped screencasting!"

Print
  $HOME/scripts/screenshot
  
super + Print
  $HOME/scripts/screenshot gimp

# Shutdown script.
super + shift + s
  ~/scripts/shutdown
