#!/bin/sh

brg=$(light -G)
brightness=$(echo "print(math.floor($brg))" | xargs lua -e)

if [ "$brightness" -ge 75 ]; then
    symbol="ğŸŒ•"
elif [ "$brightness" -ge 50 ]; then
    symbol="ğŸŒ”"
elif [ "$brightness" -ge 25 ]; then
    symbol="ğŸŒ“"
else
    symbol="ğŸŒ’"
fi

printf "%s %s%%\n" "$symbol" "$brightness"
