Config { 
   -- appearance
     font        = "xft:Source Code Pro:size=10"
   , bgColor     = "#262626"
   , fgColor     = "#F8F8F2"
   , position    = Top
   , border      = BottomB
   , borderColor = "#646464"

   -- layout
   , sepChar  = "%"
   , alignSep = "}{"
   , template = " %corona% } %date% { %volume% · %brightness% · %bat% "

   -- general behavior
   , lowerOnStart     = True
   , hideOnStart      = False   
