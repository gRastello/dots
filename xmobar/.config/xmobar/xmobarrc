   , overrideRedirect = True    
   , pickBroadest     = False   
   , persistent       = True    

   , commands = [
          Run Date "%F (%a) %H:%M"                        "date"       10
	, Run Com "sh" ["-c", "~/scripts/bar/corona"]     "corona"     36000
